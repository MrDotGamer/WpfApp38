<Window x:Class="WpfApp38.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp38"
        mc:Ignorable="d"
        Title="MainWindow" Height="433" Width="828">
    <Grid Margin="-20,0,0,0">
        <Grid HorizontalAlignment="Left" Width="780" Height="104" VerticalAlignment="Top" Margin="36,0,0,0">
            <Button Content="Source Button" Height="30" Margin="588,10,10,0" VerticalAlignment="Top" Name="SourceButton" Click="SourceButton_Click"/>
            <Button Content="Target Button" Height="30" Margin="588,60,10,0" VerticalAlignment="Top" Name="TargetButton" Click="TargetButton_Click"/>
            <Label Name="SourceLbl" Height="30" Margin="10,10,209,0" VerticalAlignment="Top"/>
            <Label Name="TargetLbl" Margin="10,60,209,11"/>
        </Grid>
        <Grid HorizontalAlignment="Left" Height="288" Margin="36,119,0,0" VerticalAlignment="Top" Width="780">
            <DataGrid LoadingRow="DataGrid_LoadingRow" Name="DataGrid" HorizontalAlignment="Center" Height="172" Margin="0,96,0,0" VerticalAlignment="Top" Width="760"/>
            <CheckBox IsChecked="True" Name="Unchanged" Content="Unchanged" HorizontalAlignment="Left" Height="33" Margin="15,58,0,0" VerticalAlignment="Top" Width="180" Checked="Unchanged_Checked" Unchecked="Unchanged_Checked"/>
            <CheckBox IsChecked="True" Name="Modified" Content="Modified" HorizontalAlignment="Left" Height="33" Margin="210,58,0,0" VerticalAlignment="Top" Width="180" Checked="Modified_Checked" Unchecked="Modified_Checked"/>
            <CheckBox IsChecked="True" Name="Added" Content="Added" HorizontalAlignment="Left" Height="33" Margin="402,58,0,0" VerticalAlignment="Top" Width="180" Checked="Added_Checked" Unchecked="Added_Checked"/>
            <CheckBox IsChecked="True" Name="Removed" Content="Removed" HorizontalAlignment="Left" Height="33" Margin="590,58,0,0" VerticalAlignment="Top" Width="180" Checked="Removed_Checked" Unchecked="Removed_Checked"/>
            <Label Content="Search" HorizontalAlignment="Left" Height="30" Margin="10,10,0,0" VerticalAlignment="Top" Width="52" Foreground="Gray"/>
            <TextBox Name="SearchTextBox" KeyUp="SearchById_KeyUp" HorizontalAlignment="Left" Height="30" Margin="80,10,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="690"/>
        </Grid>

    </Grid>
</Window>
